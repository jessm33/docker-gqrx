
# default file copies first run
[ ! -d /config/.config/gqrx ] && \
	mkdir -p /config/.config/gqrx && \
    cp /defaults/gqrx/* /config/.config/gqrx/ && \
	chown -R abc:abc /config/.config/gqrx

READY=0
while [ $READY -lt 10 ]; do
	pgrep dbus-daemon && break
	sleep 15
	READY=$(( $READY + 1 ))
done
QT_LOGGING_RULES="*.debug=true;plotter.debug=false" /usr/bin/gqrx -e  2>&1 >/config/gqrx.out
